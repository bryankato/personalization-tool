{
  "manifest_version": 2,
  "name": "User Profile Tool",
  "version":"1.5",
  "permissions": [
    "*://*.gap.com/*",
    "activeTab",
    "storage",
    "background",
    "webRequest"
  ],
  "content_scripts":[
    {
      "matches":["*://*.gap.com/*"],
      "js":["content.js"]
    }
  ],
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "ct.png",
    "default_popup": "popup.html",
    "default_title": "user profile"
  }
}
